#include<stdio.h>
#include<math.h>
int main(void)
{
    srand(time(0));
    int i,s,c;
    i=(rand()%20)+1;
    s=(rand()%(20-i))+1;
    c=20-i-s;
    if(i>s&&i>c)
    {
        printf("あなたは魔法使い系[mage]\n");;
    }
    if(s>i&&s>c)
    {
        printf("あなたはファイター系[knight]\n");
    }
    if(c>i&&c>s)
    {
        printf("あなたは盗人系[thief]\n");
    }
    if(i==s&&i>c)
    {
        printf("あなたは魔法使い系かつファイター系[mage and knight]\n");
    }
    if(s==c&&s>i)
    {
        printf("あなたはファイター系かつ盗人系[knight and thief]\n");
    }
    if(i==c&&i>s)
    {
        printf("あなたは盗人系かつ魔法使い系[thief and mage]\n");
    }
    printf("inteligence:%d,stamina:%d,charisma:%d",i,s,c);
    return 0;
}
